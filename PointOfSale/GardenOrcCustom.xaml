<Window x:Class="PointOfSale.GardenOrcCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="GardenOrcCustom" Height="450" Width="800">
	<StackPanel Margin ="10">
		<Label FontWeight="Bold">Custom Options</Label>
		<CheckBox Name ="Broccoli" Click="Broccoli_Click">Broccoli</CheckBox>
		<CheckBox Name ="Mushrooms" Click="Mushrooms_Click">Mushrooms</CheckBox>
		<CheckBox Name ="Tomato" Click="Tomato_Click">Tomato</CheckBox>
		<CheckBox Name ="Cheddar" Click="Cheddar_Click">Cheddar</CheckBox>
	</StackPanel>
</Window>
