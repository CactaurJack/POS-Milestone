<Window x:Class="PointOfSale.MarkarthMilkCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MarkarthMilkCustom" Height="450" Width="800">
	<Grid>
		<StackPanel Margin ="10">
			<Label FontWeight="Bold">Custom Options</Label>
			<CheckBox Name ="Ice" Click="Ice_Click">Ice</CheckBox>
			<ComboBox Width="150" Height="25" x:Name="Size" HorizontalAlignment="Left">
				<ComboBoxItem Content="Small"/>
				<ComboBoxItem Content="Medium"/>
				<ComboBoxItem Content="Large"/>
			</ComboBox>

		</StackPanel>

	</Grid>
</Window>
