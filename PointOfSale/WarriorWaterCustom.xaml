<Window x:Class="PointOfSale.WarriorWaterCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="WarriorWaterCustom" Height="188" Width="236">
	<Grid>
		<CheckBox Name ="Ice" Click="Ice_Click">Ice</CheckBox>
		<CheckBox Name ="Lemon" Click="Lemon_Click" Margin="0,22,0,-22">Lemon</CheckBox>
		<ComboBox Width="150" Height="25" Name="Size">
			<ComboBoxItem>Small</ComboBoxItem>
			<ComboBoxItem>Medium</ComboBoxItem>
			<ComboBoxItem>Large</ComboBoxItem>
		</ComboBox>
	</Grid>
</Window>
