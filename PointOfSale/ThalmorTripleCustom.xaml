<Window x:Class="PointOfSale.ThalmorTripleCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="ThalmorTripleCustom" Height="450" Width="800">
	<StackPanel Margin ="10">
		<Label FontWeight="Bold">Custom Options</Label>
		<CheckBox Name ="Ketchup" Click="Ketchup_Click">Ketchup</CheckBox>
		<CheckBox Name ="Bun" Click="Bun_Click">Bun</CheckBox>
		<CheckBox Name ="Mustard" Click="Mustard_Click">Mustard</CheckBox>
		<CheckBox Name ="Pickle" Click="Pickle_Click">Pickle</CheckBox>
		<CheckBox Name ="Cheese" Click="Cheese_Click">Cheese</CheckBox>
		<CheckBox Name ="Tomato" Click="Tomato_Click">Tomato</CheckBox>
		<CheckBox Name ="Lettuce" Click="Lettuce_Click">Lettuce</CheckBox>
		<CheckBox Name ="Mayo" Click="Mayo_Click">Mayo</CheckBox>
		<CheckBox Name ="Bacon" Click="Bacon_Click">Bacon</CheckBox>
		<CheckBox Name ="Egg" Click="Egg_Click">Egg</CheckBox>
	</StackPanel>
</Window>
