<Window x:Class="PointOfSale.PhillyCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="PhillyCustom" Height="450" Width="800">
	<StackPanel Margin ="10">
		<Label FontWeight="Bold">Custom Options</Label>
		<CheckBox Name ="Sirloin" Click="Sirloin_Click">Sirloin</CheckBox>
		<CheckBox Name ="Onion" Click="Onion_Click">Onion</CheckBox>
		<CheckBox Name ="Roll" Click="Roll_Click">Roll</CheckBox>
	</StackPanel>
</Window>
